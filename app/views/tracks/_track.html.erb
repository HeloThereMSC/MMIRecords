
<div class="container" id="<%= dom_id track %>">
  <div class="row">
    <div class="col-4">
      <p>
        <%= image_tag track.artwork %>
      </p>
    </div>
    <div class="col-8">
      <p>
        <strong>Title:</strong>
        <%= track.title %>
      </p>

      <p>
        <strong>Artist:</strong>
        <%= track.artist %>
      </p>

      <p>
        <strong>Genre:</strong>
        <%= track.genre %>
      </p>

      <p>
        <strong>Release date:</strong>
        <%= track.release_date %>
      </p>

      <p>
        <script src="https://w.soundcloud.com/player/api.js" type="text/javascript"></script>
        <iframe id="sc-widget" width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=<%= track.link %>&show_artwork=false"></iframe>
      </p>

      </div>
  </div>
</div>